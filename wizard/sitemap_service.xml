<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sitemap_service_form" model="ir.ui.view">
        <field name="name">sitemap.service.form</field>
        <field name="model">sitemap.service</field>
        <field name="arch" type="xml">
            <form string="Sitemap">
                <sheet>
                    <group col="4">
                        <field name="month"/>
                        <field name="year"/>
                        <field name="site"/>
                    </group>
                    <group>
                        <button name="trigger_this_month_sitemap" string="This Monthly Sitemap" type="object" class="oe_highlight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sitemap_service_action" model="ir.actions.act_window">
        <field name="name">Sitemap</field>
        <field name="res_model">sitemap.service</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="sitemap_service_menu"
              name="Sitemap"
              parent="book_menu"
              action="sitemap_service_action"
              sequence="60"/>

</odoo>
