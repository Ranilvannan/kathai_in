<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_site2_crawl_form" model="ir.ui.view">
        <field name="name">project.site2.service.form</field>
        <field name="model">crawl.service</field>
        <field name="arch" type="xml">
            <form string="Crawl Service">
                <sheet>
                    <group string="Tamilkamaveri">
                        <button name="trigger_tamilkamaveri_crawl" string="Tamilkamaveri Crawl" type="object" class="oe_highlight"/>
                        <button name="trigger_tamilkamaveri_history_crawl" string="Tamilkamaveri History Crawl" type="object" class="oe_highlight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="project_site2_crawl_action" model="ir.actions.act_window">
        <field name="name">Crawl Service</field>
        <field name="res_model">crawl.service</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_site2_crawl_form"/>
    </record>

    <record id="project_site2_crawl_form_act" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_site2_crawl_form"/>
        <field name="act_window_id" ref="project_site2_crawl_action"/>
    </record>

    <menuitem id="project_site2_crawl_menu"
              name="Crawl Service"
              parent="tamil_menu"
              action="project_site2_crawl_action"
              sequence="20"/>

</odoo>
