<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="service_service_form" model="ir.ui.view">
        <field name="name">service.service.form</field>
        <field name="model">service.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <button name="trigger_crawl" string="Crawl" type="object"/>
                    <button name="trigger_history_crawl" string="History Crawl" type="object"/>
                    <button name="trigger_category_tag_update" string="Category Tag Update" type="object"/>
                    <button name="trigger_site1_import" string="Site 1 Import" type="object"/>
                    <button name="trigger_site_data_update" string="Site Data Update" type="object"/>
                    <button name="trigger_site_validate" string="Check Site valid" type="object"/>
                    <button name="trigger_export" string="Export" type="object"/>
                </sheet>
            </form>
        </field>
    </record>


    <record id="service_service_action" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">service.service</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="service_service_menu"
              name="Service"
              parent="book_menu"
              action="service_service_action"
              sequence="70"/>

</odoo>
