<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="service_service_form" model="ir.ui.view">
        <field name="name">service.service.form</field>
        <field name="model">service.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <group col="4">
                        <button name="desitales2_crawl" string="Desitales2" type="object" class="btn btn-primary"/>
                    </group>
                    <group string="Services" col="6">
                        <button name="reset_all" string="Reset" type="object" class="btn btn-primary"/>
                        <button name="refresh_validation_all" string="Refresh Validation" type="object" class="btn btn-primary"/>
                        <button name="validate_story_all" string="Validate" type="object" class="btn btn-primary"/>
                        <button name="publish_all" string="Publish" type="object" class="btn btn-primary"/>
                        <button name="export_all" string="Export" type="object" class="btn btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="service_service_action" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">service.service</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="service_service_menu"
              name="Service"
              parent="book_menu"
              action="service_service_action"
              sequence="40"/>

</odoo>
