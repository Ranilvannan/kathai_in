<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="service_service_form" model="ir.ui.view">
        <field name="name">service.service.form</field>
        <field name="model">service.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <notebook>
                        <page string="Common">
                            <button name="trigger_book_category_tag_update" string="Book Category Tag Update" type="object" class="oe_highlight"/>
                        </page>
                    </notebook>
                    <notebook>
                        <page string="Project Site 1">
                            <group>
                                <button name="trigger_project_site1_import" string="Site 1 Import" type="object" class="oe_highlight"/>
                                <button name="trigger_project_site1_data_update" string="Site1 Data Update" type="object" class="oe_highlight"/>
                                <button name="trigger_project_site1_validate" string="Check Site1 valid" type="object" class="oe_highlight"/>
                                <button name="trigger_project_site1_export" string="Site 1 Export" type="object" class="oe_highlight"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <sheet>
                    <h2>Crawling Service</h2>
                    <notebook>
                        <page string="Desitales2">
                            <group>
                                <button name="trigger_desitales2_crawl" string="Desitales2 Crawl" type="object" class="oe_highlight"/>
                                <button name="trigger_desitales2_history_crawl" string="Desitales2 History Crawl" type="object" class="oe_highlight"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="service_service_action" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">service.service</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="service_service_menu"
              name="Service"
              parent="book_menu"
              action="service_service_action"
              sequence="80"/>

</odoo>
