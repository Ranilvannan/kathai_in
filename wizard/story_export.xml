<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="story_export_form" model="ir.ui.view">
        <field name="name">story.export.form</field>
        <field name="model">story.export</field>
        <field name="arch" type="xml">
            <form string="Export">
                <sheet>
                    <group>
                        <field name="name"/>
                        <button name="trigger_export" string="Export XML File" type="object"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="story_export_tree" model="ir.ui.view">
        <field name="name">story.export.tree</field>
        <field name="model">story.export</field>
        <field name="arch" type="xml">
            <tree name="Export">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="story_export_action" model="ir.actions.act_window">
        <field name="name">Export</field>
        <field name="res_model">story.export</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="story_export_menu"
              name="Export"
              parent="story_book_menu"
              action="story_export_action"
              sequence="40"/>

</odoo>
