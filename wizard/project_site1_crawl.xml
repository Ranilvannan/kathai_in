<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_site1_crawl_form" model="ir.ui.view">
        <field name="name">project.site1.crawl.form</field>
        <field name="model">crawl.service</field>
        <field name="arch" type="xml">
            <form string="Crawl Service">
                <sheet>
                    <group string="Desitales2">
                        <button name="trigger_desitales2_crawl" string="Desitales2 Crawl" type="object" class="oe_highlight"/>
                        <button name="trigger_desitales2_history_crawl" string="Desitales2 History Crawl" type="object" class="oe_highlight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="project_site1_crawl_action" model="ir.actions.act_window">
        <field name="name">Crawl Service</field>
        <field name="res_model">crawl.service</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_site1_crawl_form"/>
    </record>

    <record id="project_site1_crawl_form_act" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_site1_crawl_form"/>
        <field name="act_window_id" ref="project_site1_crawl_action"/>
    </record>

    <menuitem id="project_site1_crawl_menu"
              name="Crawl Service"
              parent="english_menu"
              action="project_site1_crawl_action"
              sequence="20"/>

</odoo>
