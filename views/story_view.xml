<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="story_story_form" model="ir.ui.view">
        <field name="name">story.story.form</field>
        <field name="model">story.story</field>
        <field name="arch" type="xml">
            <form string="Story">
                <header>
                    <button class="oe_highlight" name="trigger_english_title" string="Translated Title" type="object"/>
                    <button class="oe_highlight" name="trigger_publish" string="Publish" type="object"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <field name="date"/>
                    </group>
                    <group string="Crawl Info">
                        <group>
                            <field name="crawl_domain"/>
                            <field name="crawl_url"/>
                            <field name="parent_url"/>
                        </group>
                        <group>
                            <field name="crawl_status"/>
                            <field name="language"/>
                        </group>
                    </group>
                    <group string="Site Info">
                        <group>
                            <field name="site_url"/>
                            <field name="site_title"/>
                            <field name="site_preview"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="has_published"/>
                            <field name="is_exported"/>
                            <field name="date_of_publish"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="title"/>
                        <field name="preview"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="order_seq"/>
                                    <field name="content"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="story_story_tree" model="ir.ui.view">
        <field name="name">story.story.tree</field>
        <field name="model">story.story</field>
        <field name="arch" type="xml">
            <tree name="Story">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="story_story_action" model="ir.actions.act_window">
        <field name="name">Story</field>
        <field name="res_model">story.story</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="story_story_menu"
              name="Story"
              parent="story_book_menu"
              action="story_story_action"
              sequence="10"/>

</odoo>
