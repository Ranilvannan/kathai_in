<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="story_book_form" model="ir.ui.view">
        <field name="name">story.book.form</field>
        <field name="model">story.book</field>
        <field name="arch" type="xml">
            <form string="Story">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <field name="date"/>
                    </group>
                    <group string="Crawl Info" col="4">
                        <field name="crawl_domain"/>
                        <field name="crawl_url"/>
                        <field name="prev_url"/>
                        <field name="language"/>
                        <field name="is_valid"/>
                    </group>
                    <group string="Content">
                        <field name="title"/>
                        <field name="preview"/>
                        <field name="category"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="order_seq"/>
                                    <field name="content"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="story_book_tree" model="ir.ui.view">
        <field name="name">story.book.tree</field>
        <field name="model">story.book</field>
        <field name="arch" type="xml">
            <tree name="Story">
                <field name="name"/>
                <field name="date"/>
                <field name="crawl_domain"/>
                <field name="language"/>
                <field name="is_valid"/>
            </tree>
        </field>
    </record>

    <record id="story_book_action" model="ir.actions.act_window">
        <field name="name">Story</field>
        <field name="res_model">story.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="story_book_menu"
              name="Story"
              parent="book_menu"
              action="story_book_action"
              sequence="10"/>

</odoo>
