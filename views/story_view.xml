<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="story_book_form" model="ir.ui.view">
        <field name="name">story.book.form</field>
        <field name="model">story.book</field>
        <field name="arch" type="xml">
            <form string="Story">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <h1><field name="sequence"/></h1>
                    <group>
                        <field name="title"/>
                        <field name="preview"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Site Detail" col="4">
                        <field name="domain"/>
                        <field name="url"/>
                        <field name="parent_id"/>
                        <field name="is_exported"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="order_seq"/>
                                    <field name="paragraph"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="story_book_tree" model="ir.ui.view">
        <field name="name">story.book.tree</field>
        <field name="model">story.book</field>
        <field name="arch" type="xml">
            <tree name="Story">
                <field name="title"/>
                <field name="preview"/>
                <field name="tag_ids"/>
                <field name="domain"/>
                <field name="url"/>
                <field name="parent_id"/>
                <field name="is_exported"/>
            </tree>
        </field>
    </record>

    <record id="story_book_action" model="ir.actions.act_window">
        <field name="name">Story</field>
        <field name="res_model">story.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="story_book_menu" name="Story" parent="book_menu" action="story_book_action" sequence="10"/>

</odoo>
