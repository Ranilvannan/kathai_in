<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kathai_in_story_form" model="ir.ui.view">
        <field name="name">kathai.in.story.form</field>
        <field name="model">kathai.in.story</field>
        <field name="arch" type="xml">
            <form string="Story">
                <header>
                    <button class="oe_highlight" name="trigger_english_title" string="Translated Title" type="object"/>
                    <button class="oe_highlight" name="trigger_publish" string="Publish" type="object"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <h1><field name="sequence"/></h1>
                    <group>
                        <field name="title"/>
                        <field name="english_title"/>
                        <field name="preview"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Site Detail" col="4">
                        <field name="domain"/>
                        <field name="url"/>
                        <field name="parent_id"/>
                        <field name="parent_url"/>
                        <field name="is_exported"/>
                        <field name="crawl_status"/>
                        <field name="dop"/>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content_ids">
                                <tree editable="bottom">
                                    <field name="order_seq"/>
                                    <field name="paragraph"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kathai_in_story_tree" model="ir.ui.view">
        <field name="name">kathai.in.story.tree</field>
        <field name="model">kathai.in.story</field>
        <field name="arch" type="xml">
            <tree name="Story">
                <field name="title"/>
                <field name="preview"/>
                <field name="tag_ids"/>
                <field name="domain"/>
                <field name="url"/>
                <field name="parent_id"/>
                <field name="is_exported"/>
            </tree>
        </field>
    </record>

    <record id="kathai_in_story_action" model="ir.actions.act_window">
        <field name="name">Story</field>
        <field name="res_model">kathai.in.story</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="kathai_in_story_menu"
              name="Story"
              parent="kathai_in_menu"
              action="kathai_in_story_action"
              sequence="10"/>

</odoo>
